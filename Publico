import os

class Publico:
    def __init__(self,usuario,self.contrasenanombre,correo,telefono,edad,genero):
        self.nombre=nombre
        self.correo=correo
        self.telefono=telefono
        self.edad=edad
        self.genero=genero
        
    def datos(self):
        dato=[self.usuario,self.contrasena,self.nombre,self.correo,self.telefono,self.edad,self.genero]
        return dato
    
    def perfil(self):
        print('Usuario: ',(self.usuario))
        print('Nombre y Apellido Paterno: ',(self.nombre))
        print('Correo: ',(self.correo))
        print('Telefono: ',(self.telefono))
        print('Edad: ',(self.direccion))
        print('Genero: ', (self.genero))
        
    def registro_usuario(self):
        u=input('Usuario: ')
        self.usuario=u
        co=input('Contraseña: ')
        self.contraseña=co
    def registro(self):
        n=input('Nombre y Apellido Paterno: ')
        self.nombre=n
        c=input('Correo: ')
        self.correo=c
        t=input('Teléfono: ')
        self.telefono=t
        e=input('Edad: ')
        self.edad=e
        g=input('Genero (M/F): ')
        self.genero=g
        
    def Crear_archivo(self):
        import pickle
        archivo=open('Publico','ab')
        d=self.datos()
        pickle.dump(d,archivo)
        archivo.close()
        
    def get_usuario(self):
        return self.usuario
    
    def get_contrasena(self):
        return self.contrasena

    def get_nombre(self):
        return self.nombre
    
    def get_correo(self):
        return self.correo
    
    def get_telefono(self):
        return self.telefono
    
    def get_edad(self):
        return self.edad
    
    def get_genero(self):
        return self.genero
